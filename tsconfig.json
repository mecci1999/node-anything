{
  "compilerOptions": {
      "target": "es6",
      "module": "CommonJS",
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "watch": false,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "noUnusedLocals": false,
      "removeComments": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "declaration": true,
      "lib": ["esnext"],
      "types": ["node", "mocha"],
      "paths": {
          "@/*": ["./src/*"],
          "@utils": ["./src/utils/*"]
      }
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src/**/*.ts", "./src/**/*.d.ts", "./test/**/*.ts", "./test/*.ts", "./examples/*.ts"]
}
